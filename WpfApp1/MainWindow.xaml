        <ContentControl Content="ContentControl" Grid.Column="2" HorizontalAlignment="Center" Margin="0,60,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <Canvas Grid.Column="1" Grid.Row="2" Margin="70,30,70,30"/>

    </Grid>
</Window>
