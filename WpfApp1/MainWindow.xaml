        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="317*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <Button Content="Start!" HorizontalAlignment="Center" Margin="0,54,0,0" Grid.Row="3" VerticalAlignment="Top" Height="29" Width="84" RenderTransformOrigin="0.495,0.583"/>
